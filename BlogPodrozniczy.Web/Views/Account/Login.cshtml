@model BlogPodrozniczy.Web.Models.ViewModels.LoginViewModel

@{
}

<div class="container mx-auto">
    <div class="row justify-content-center">
        <div class="col-12 col-lg-6">
            <h1 class="mt-3 mb-3 h3">
                Logowanie
            </h1>

            <form method="post">
                <div class="mb-3">
                    <label class="form-label">Nazwa użytkownika</label>
                    <input type="text" id="nazwaUżytkownika" class="form-control" asp-for="NazwaUżytkownika" />
                </div>

                <div class="mb-3">
                    <label class="form-label">Hasło</label>
                    <input type="password" id="hasło" class="form-control" asp-for="Hasło" />
                </div>

                <div class="mb-3">
                    <button type="submit" class="btn btn-dark">Zaloguj się</button>
                </div>

                <input type="hidden" asp-for="ReturnUrl" />
            </form>
        </div>
    </div>
</div>
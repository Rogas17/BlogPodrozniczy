@model BlogPodrozniczy.Web.Models.ViewModels.AddTagRequest
@{
}

<div class="bg-secondary bg-opacity-10 py-2">
    <div class="container">
        <h1>Dodaj Nowy Tag - Admin Functionality</h1>
    </div>
</div>

<div class="container py-5">
    <form method="post">
        <div class="mb3">
            <label class="form-label">Nazwa</label>
            <input type="text" class="form-control" id="nazwa" asp-for="Nazwa" />
        </div>

        <div class="mb-3">
            <label class="form-label">Pokazana Nazwa</label>
            <input type="text" class="form-control" id="pokazanaNazwa" asp-for="WyświetlanaNazwa" />
        </div>

        <div class="mb-3">
            <button type="submit" class="btn-dark">Stwórz</button>
        </div>
    </form>
</div>